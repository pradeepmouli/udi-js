{
	"compileOnSave": true,
	"ts-node": {
		"transpileOnly": true,
		"esm": true
	},
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		//"ignoreDeprecations": "5.0",
		//"allowArbitraryExtensions": true,
		//"suppressImplicitAnyIndexErrors": true,
		"pretty": true,
		"composite": true,
		"sourceMap": true,
		"declarationMap": true,
		"ignoreDeprecations": "5.0",
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}